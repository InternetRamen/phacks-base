---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="poolesville_hacks">
    <main class="py-20">
        <section
            class="mx-auto w-11/12 max-w-3xl flex items-center justify-center flex-col gap-4"
        >
            <div class="flex items-center flex-col gap-2">
                <h1 class="text-5xl font-extrabold">poolesville&#8203;_hacks</h1>
                <h2 class="text-2xl font-bold text-center">
                    A group of Poolesville High School students <br /> running <span
                        class="bg-clip-text text-transparent bg-gradient-to-r from-green-300 via-blue-500 to-purple-600"
                        >hackathons</span
                    >
                </h2>
            </div>
        </section>
        <section class="mx-auto w-11/12 max-w-3xl mt-4">
            <div class="flex flex-wrap gap-6 items-center justify-center">
                <Card
                    title="poolesville_hacks 2"
                    highlights={` - 12 hours <br/> - 30 participants <br/> - 4 professional mentors`}
                    devpost="https://poolesville-hacks-2.devpost.com/"
                    website="https://2.poolesvillehacks.tech/"
                    type="In-person"
                    date="April 2023"
                />
                <Card
                    title="BlairHacks Mini '22"
                    highlights={` - 8 hours <br/> - 50 participants <br/> - 4 workshops`}
